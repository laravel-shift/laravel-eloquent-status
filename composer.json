{
    "name": "makeabledk/laravel-eloquent-status",
    "license": "CC-BY-SA-4.0",
    "autoload": {
        "psr-4": {
            "Makeable\\EloquentStatus\\": "src/"
        }
    },
    "require": {
        "php": ">=7.0.0",
        "illuminate/support": "^5.4",
        "makeabledk/laravel-querykit": "^1.2"
    },
    "require-dev": {
        "laravel/laravel": "5.5",
        "friendsofphp/php-cs-fixer": "^2.3",
        "orchestra/testbench": "~3.5"
    },
    "autoload-dev": {
        "psr-4": {
            "Makeable\\EloquentStatus\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "style": "./vendor/bin/php-cs-fixer fix ./src --rules=@PSR2,@Symfony,ordered_class_elements,ordered_imports --verbose"
    }
}
